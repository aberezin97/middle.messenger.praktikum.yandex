extends layouts/page.pug

block variables
    - let title = "Регистрация"

block content
    .center-wrapper
        .enter-form
            .enter-form__header
                h1 Регистрация
            .enter-form__body
                form
                    input.text-input(type="email" name="email" id="email" placeholder="Почта")
                    input.text-input(type="text" name="login" id="login" placeholder="Логин")
                    input.text-input(type="text" name="first_name" id="first_name" placeholder="Имя")
                    input.text-input(type="text" name="second_name" id="second_name" placeholder="Фамилия")
                    input.text-input(type="text" name="phone" id="phone" placeholder="Телефон")
                    input.text-input(type="password" name="password" id="password" placeholder="Пароль")
                    input.text-input(type="password" name="password_confirmation" id="password_confirmation" placeholder="Пароль (ещё раз)")
            .enter-form__footer
                button.button.button_blue Зарегистрироваться
                a(href="signin.pug") Войти