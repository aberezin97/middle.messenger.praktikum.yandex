extends layouts/page.pug

block variables
    - let title = "Изменить данные"
    - let login = "alex"
    - let email = "alex@foo.bar"
    - let first_name = "Александр"
    - let last_name = "Березин"
    - let display_name = "Alex"
    - let phone = "+7 (888) 123-45-67"

block content
    .profile
        .profile__header
            .profile__avatar
        .profile__content
            div.foo
                span Почта
                input.profile__field(value=email)
            div.foo
                span Логин
                input.profile__field(value=login)
            div.foo
                span Имя
                input.profile__field(value=first_name)
            div.foo
                span Фамилия
                input.profile__field(value=last_name)
            div.foo
                span Имя в чате
                input.profile__field(value=display_name)
            div.foo
                span Телефон
                input.profile__field(value=phone)
        .profile__footer.profile__footer_centered
            button.btn.btn-blue Сохранить