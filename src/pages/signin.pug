extends layouts/page.pug

block variables
    - let title = "Авторизация"

block content
    .center-wrapper
        .enter-form
            .enter-form__header
                h1 Вход
            .enter-form__body
                form(action="#" method="post")
                    input.text-input(type="text" name="login" id="login" placeholder="Логин")
                    input.text-input(type="password" name="password" id="password" placeholder="Пароль")
            .enter-form__footer
                button.button.button_blue Войти
                a(href="signup.pug") Нет аккаунта?
